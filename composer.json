{
    "name": "dillowhenrick/leetspeakmagic",
    "description": "A powerful and flexible PHP package for encoding and decoding Leetspeak (1337 5p34k).",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Dillowhenrick\\Leetspeakmagic\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Whenrick",
            "email": "dillowhenrick@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "friendsofphp/php-cs-fixer": "^3.92",
        "pestphp/pest": "*",
        "phpstan/phpstan": "^2.1"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
